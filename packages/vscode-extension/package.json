{
  "name": "kinforge-behave-engine-vscode",
  "displayName": "Kinforge Graph extension",
  "description": "Run behave graphs locally in VS Code",
  "version": "1.0.0",
  "private": true,
  "license": "MPL-2.0",
  "publisher": "kinforge",
  "author": "kiberonlabsdev",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Extension Packs",
    "Visualization"
  ],
  "pricing": "Free",
  "icon": "media/logo.png",
  "activationEvents": [],
  "main": "./dist/extension.js",
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "Using ESLint is not possible in virtual workspaces."
    },
    "untrustedWorkspaces": {
      "supported": false,
      "description": "The extension requires workspace trust because it loads configuration files and code from the workspace and executes it."
    }
  },
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "when": "resourceLangId == kinforge-behave-graph",
          "command": "kinforge-behave-graph.executeGraph",
          "group": "z_commands"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": ".klbgraphrc",
        "url": "https://schemas.kinforge.co.za/v1/klbgraphrc.json"
      }
    ],
    "languages": [
      {
        "id": "kinforge-behave-graph",
        "aliases": [
          "Behave Graph",
          "Kiberon Labs Behave Graph"
        ],
        "extensions": [
          ".klbgraph"
        ],
        "icon": {
          "light": "./media/icon.png",
          "dark": "./media/icon.png"
        }
      }
    ],
    "customEditors": [
      {
        "viewType": "kinforge-behave-graph.graphFile",
        "displayName": "Behave Graph file",
        "selector": [
          {
            "filenamePattern": "*.klbgraph"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "kinforge-behave-graph.graph.new",
        "title": "Create new Behave Graph file",
        "category": "Graph Engine"
      },
      {
        "command": "kinforge-behave-graph.openGraphEngine",
        "title": "Open Graph Engine"
      },
      {
        "command": "kinforge-behave-graph.executeGraph",
        "title": "Execute Graph"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/new-horizon-organisation/behave-graph"
  },
  "scripts": {
    "vite": "vite",
    "build:app": "vite build",
    "vscode:prepublish": "yarn run build",
    "build": "npm run check-types  && npm run build:app && npm run build:ext",
    "build:ext": "node esbuild.js",
    "dev": "npm-run-all -p dev:*",
    "dev:ext": "node esbuild.js  --watch",
    "dev:app": "vite build --watch",
    "dev:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "pretest": "yarn run build-tests && yarn run build ",
    "check-types": "tsc --noEmit",
    "test:e2e": "vscode-test"
  },
  "dependencies": {
    "@kinforge/behave-graph": "*",
    "@kinforge/behave-graph-flow": "*",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "rc-dock": "4.0.0-alpha.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reactflow": "^11.11.4",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.60.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "vite": "^7.2.4"
  }
}